<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsamlabs.bbm.GSamBatteryMonitorRootHelper"
    android:versionCode="4"
    android:versionName="1.3" >

    <!-- Minimum of KitKat - no point in offering it for other versions! -->
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <!-- Create our own permission that any calling app must have.  We do this
         So that calling apps still need to publicize their need for BATTERY_STATS -->
    <permission
        android:name="com.gsamlabs.permission.BATTERY_STATS"
        android:description="@string/permdesc_batteryStats"
        android:label="@string/permlab_batteryStats"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="dangerous" >
    </permission>

    <!-- Even though we're root, still need to access BATTERY_STATS -->
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <!-- Courtesy to show that we use root to copy ourselves into /system/priv-app/ -->
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <!-- NOTE:  This activity may get disabled, thereby hiding the app from the launcher -->
        <activity
            android:name="com.gsamlabs.bbm.GSamBatteryMonitorRootHelper.MainActivityLauncher"
            android:label="@string/app_name" 
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.gsamlabs.bbm.GSamBatteryMonitorRootHelper.MainActivity"
            android:label="@string/app_name"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>

        <!-- The service providing getStatistics - we require our custom BATTERY_STATS permission -->
        <service
            android:name="com.gsamlabs.bbm.GSamBatteryMonitorRootHelper.BatteryStatsService"
            android:permission="com.gsamlabs.permission.BATTERY_STATS" >
            <intent-filter>
                <action android:name="com.gsamlabs.bbm.GSamBatteryMonitorRootHelper.IBatteryStatsService" />
            </intent-filter>
        </service>
    </application>
</manifest>
